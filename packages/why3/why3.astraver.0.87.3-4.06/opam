  "ocaml" {>= "4.06.0" & < "4.07.0"}
  "alt-ergo"
  "lablgtk"    {>= "2.14.2"}
  "menhir"
  "conf-gtksourceview"
  "camlzip"
  "zarith"
]
depopts: [
  "ocamlgraph"
  "coq"
]
conflicts: [
  "coq" {>= "0.87"}
]
