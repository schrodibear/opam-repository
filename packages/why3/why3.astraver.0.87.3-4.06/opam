]
build: [
  ["autoconf"]
  ["./automake.sh"]
  ["./configure" "--prefix" prefix "--disable-coq-tactic" { !camlp5:installed | !coq:installed }]
  [make "-j" jobs]
]
install: [make "install" "install-lib"]
remove: [
  ["autoconf"]
  ["./configure" "--prefix" prefix]
  [make "uninstall"]
]
build-doc: [
  [make "doc" "stdlibdoc" "apidoc"]
  [make "DOCDIR=%{doc}%/why3" "install-doc"]
]
